<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <%= stylesheet_link_tag    "application" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
  </head>

  <body>
    <%= render 'layouts/header'%>

    <div id="main">
      <%= render 'layouts/messages'%>
      <%= yield %>
    </div>

    <% if user_signed_in? %>
      <%= render 'layouts/footer'%>
    <% end %>
  </body>
</html>
