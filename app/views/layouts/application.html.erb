<!DOCTYPE html>
<html>
	<head>
  	<title><%= title %></title>
  	<%= stylesheet_link_tag    "application" %>
  	<%= javascript_include_tag "application" %>
  	<%= csrf_meta_tags %>
	</head>

	<body>
		<%= render 'layouts/header'%>
		<div id="main">
			<% flash.each do |key, value| %>
				<div id="messages">
					<div class = "flash <%= key %>" > <%= value %></div>
				</div>
			<% end %>
			<%= yield %>
		</div>

		<% if user_signed_in? %>
			<%= render 'layouts/footer'%>
		<% end %>
	</body>
</html>